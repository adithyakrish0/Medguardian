# MedGuardian Environment Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=change-this-to-a-random-secret-key-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For local development (SQLite)
DATABASE_URL=sqlite:///instance/medguardian.db
# For production (PostgreSQL)
# DATABASE_URL=postgresql://medguard:password@localhost:5432/medguardian

# Redis Configuration (OPTIONAL - only needed for production features)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@medguardian.com

# Security
WTF_CSRF_ENABLED=True
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=temp

# Vision System
VISION_ENABLED=True
YOLO_MODEL_PATH=yolov5s.pt
PILL_DETECTION_CONFIDENCE=0.5

# Scheduler
SCHEDULER_ENABLED=True
MISSED_DOSE_CHECK_INTERVAL=3600  # 1 hour in seconds

# Rate Limiting (uses memory by default, Redis optional)
RATELIMIT_ENABLED=True
# RATELIMIT_STORAGE_URL=redis://localhost:6379/1

# SocketIO (OPTIONAL - only for real-time notifications in production)
# SOCKETIO_MESSAGE_QUEUE=redis://localhost:6379/2

# JWT Authentication (NEW)
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# Tesseract OCR (if not in system PATH)
# TESSERACT_CMD=C:\\Program Files\\Tesseract-OCR\\tesseract.exe

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=MedGuardianpy_bot
